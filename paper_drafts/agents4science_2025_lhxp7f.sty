% Agents4Science 2025 Conference Style File
% Based on standard scientific conference formatting

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{agents4science_2025_lhxp7f}[2025/01/01 Agents4Science Conference Style]

% Process options
\newif\if@preprint\@preprintfalse
\DeclareOption{preprint}{\@preprinttrue}
\ProcessOptions\relax

% Basic page setup
\RequirePackage[letterpaper, margin=1in]{geometry}
\RequirePackage{times}
\RequirePackage[scaled=0.92]{helvet}
\RequirePackage{courier}

% Typography
\RequirePackage{microtype}
\RequirePackage{graphicx}
\RequirePackage{subfigure}
\RequirePackage{booktabs}
\RequirePackage{amsmath}
\RequirePackage{amssymb}
\RequirePackage{amsthm}
\RequirePackage{algorithm}
\RequirePackage{algorithmic}

% Colors and links
\RequirePackage{xcolor}
\RequirePackage[colorlinks=true,linkcolor=blue,citecolor=blue,urlcolor=blue]{hyperref}

% Section formatting
\RequirePackage{titlesec}
\titleformat{\section}{\large\bfseries}{\thesection}{1em}{}
\titleformat{\subsection}{\normalsize\bfseries}{\thesubsection}{1em}{}
\titleformat{\subsubsection}{\normalsize\itshape}{\thesubsubsection}{1em}{}

% Title formatting
\renewcommand{\@maketitle}{%
  \newpage
  \null
  \vskip 2em%
  \begin{center}%
  \let \footnote \thanks
    {\LARGE \@title \par}%
    \vskip 1.5em%
    {\large
      \lineskip .5em%
      \begin{tabular}[t]{c}%
        \@author
      \end{tabular}\par}%
    \vskip 1em%
    {\large \@date}%
  \end{center}%
  \par
  \vskip 1.5em}

% Abstract formatting
\renewenvironment{abstract}%
{\small\quotation\textbf{Abstract:} }%
{\endquotation}

% Line spacing
\RequirePackage{setspace}
\onehalfspacing

% Figure and table captions
\RequirePackage[font=small,labelfont=bf]{caption}

% Bibliography style
\bibliographystyle{plain}

% Header for preprint version
\if@preprint
  \RequirePackage{fancyhdr}
  \pagestyle{fancy}
  \fancyhf{}
  \fancyhead[C]{Preprint submitted to Agents4Science 2025}
  \fancyfoot[C]{\thepage}
  \renewcommand{\headrulewidth}{0.4pt}
\fi

% Math environments
\newtheorem{theorem}{Theorem}[section]
\newtheorem{lemma}[theorem]{Lemma}
\newtheorem{proposition}[theorem]{Proposition}
\newtheorem{corollary}[theorem]{Corollary}
\newtheorem{definition}[theorem]{Definition}
\newtheorem{example}[theorem]{Example}
\newtheorem{remark}[theorem]{Remark}

% Useful commands
\newcommand{\R}{\mathbb{R}}
\newcommand{\E}{\mathbb{E}}
\newcommand{\Var}{\text{Var}}
\newcommand{\argmin}{\operatorname{argmin}}
\newcommand{\argmax}{\operatorname{argmax}}

\endinput